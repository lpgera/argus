{
  "author": "lpgera",
  "name": "sensor-data-collection",
  "private": true,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": "^8.5.0"
  },
  "scripts": {
    "build": "npm run build -w sdc2-frontend",
    "seed": "npm run seed -w sdc2-server",
    "start": "npm run start -w sdc2-server",
    "docker:bootstrap": "docker-compose run --rm backend npm i",
    "docker:seed": "docker-compose run --rm backend npm run seed",
    "docker:up": "docker-compose up -d && docker-compose logs -tf",
    "docker:build": "docker-compose run --rm backend npm run build",
    "docker:logs": "docker-compose logs -tf",
    "docker:down": "docker-compose down --remove-orphans",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "check-updates": "npm exec --include-workspace-root -ws -- ncu -i",
    "browserslist-update": "browserslist --update-db"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.3.16",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3"
  },
  "workspaces": [
    "./packages/*"
  ]
}
