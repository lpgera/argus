  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "link": "lerna link convert",
    "dc:bootstrap": "docker-compose run --rm bootstrap",
    "dc:up": "docker-compose up -d frontend",
    "dc:down": "docker-compose down --remove-orphans",
    "dc:restart": "npm run dc:up && npm run dc:down",
    "dc:logs": "docker-compose logs -f",
    "server:dev": "cross-env NODE_ENV=development nodemon --cwd ./packages/sdc2-server/ ./src/index.js",
    "server:start": "cross-env NODE_ENV=production node ./packages/sdc2-server/src/index.js",
    "frontend:dev": "webpack-dev-server --inline --progress --config ./packages/sdc2-frontend/build/webpack.dev.conf.js",
    "frontend:lint": "eslint --ext .js,.vue ./packages/sdc2-frontend/src",
    "frontend:build": "node ./packages/sdc2-frontend/build/build.js",
    "frontend:build-report": "node ./packages/sdc2-frontend/build/build.js --report"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^8.2.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-plugin-transform-vue-jsx": "^3.5.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-stage-2": "^6.22.0",
    "chalk": "^2.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^3.0.9",
    "lerna": "^3.18.1",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.17.4",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^1.2.0",
    "portfinder": "^1.0.13",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-url": "^7.2.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^7.0.1",
    "semver": "^5.3.0",
    "shelljs": "^0.7.6",
    "style-loader": "^0.21.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "uglifyjs-webpack-plugin": "^1.1.1",
    "url-loader": "^0.5.8",
    "vue-loader": "^13.7.3",
    "vue-style-loader": "^3.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.11.5",
    "webpack-merge": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "sdc2-client": "file:packages/sdc2-client",
    "sdc2-client-bme280": "file:packages/sdc2-client-bme280",
    "sdc2-client-dht22": "file:packages/sdc2-client-dht22",
