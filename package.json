{
  "author": "lpgera",
  "name": "sensor-data-collection",
  "private": true,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": "^8.5.0"
  },
  "scripts": {
    "bootstrap": "docker-compose run --rm backend npm i",
    "up": "docker-compose up -d && docker-compose logs -tf",
    "seed": "docker-compose run --rm backend bash -c 'cd packages/sdc2-server && node db/seed.js'",
    "down": "docker-compose down --remove-orphans",
    "restart": "npm run down && npm run up",
    "logs": "docker-compose logs -tf",
    "build": "docker-compose run --rm backend npm run local:build",
    "local:build": "npm run build -w sdc2-frontend",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "check-updates": "npm exec --include-workspace-root -ws -- ncu",
    "check-updates-interactive": "npm exec --include-workspace-root -ws -- ncu -i"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.3.13",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3"
  },
  "workspaces": [
    "./packages/*"
  ]
}
